body
  font-family Circle-rounded, sans-serif
  margin 0

*, ::after, ::before
  box-sizing border-box

body
  .container
    max-width 1440px
    margin 0 auto
    .index-container
      margin 0 200px
  .bottom-line
      border-bottom 2px solid #CDCDCD

  header
    height 102px
    border-bottom 2px solid #CDCDCD
    .container
      height 100%
      .header-links
        display flex
        flex-direction row
        justify-content space-between
        height 100%
        .left-menu
          display flex
          align-items center
          a.brand-logo
            img
              width 190px
              height 72.28px
          p
            line-height 31px
            font-size 24px
            margin-top 30px
        .right-menu
          display flex
          align-items center
          margin-right 50px
          a
            margin-left 16px
            img.user-logo
              border 3px solid #010101
              border-radius 35px
              height 70px
              width 70px
  .index-container

    .top-article
      display flex
      flex-direction row
      margin-top 42px
      .article-picture
        max-height 390px
        display flex
      img
        height 100%
      .icons
        span
          &.new
            color #E9399C
            font-size 16px
            line-height 20px
            text-transform uppercase
            margin-right 17px
          &.likes
            position relative
            color #CDCDCD
            margin-left 25px
            &:before
              position absolute
              content ''
              background url('/static/dist/img/svg/like-ico.svg')
              width 23px
              height 19px
              right 20px
          &.comments
            position relative
            color #CDCDCD
            margin-left 25px
            &:before
              position absolute
              content ''
              background url('/static/dist/img/svg/comment-ico.svg')
              width 19px
              height 16px
              right 20px
          &.views
            position relative
            color #CDCDCD
            margin-left 25px
            &:before
              position absolute
              content ''
              background url('/static/dist/img/svg/view-ico.svg')
              width 20px
              height 19px
              right 20px
      h2
        font-size 45px
        line-height 52px
        color #315AF2
        font-family Museo-Cyrl
      p
        font-size 16px
        line-height 22px
        margin-bottom 15px
      button
        background: #315AF2;
        border-radius: 3px;
        text-decoration: none;
        color white
        font-family Museo-Cyrl
        font-size 36px
        padding 12px 20px
        font-weight bold
        border: none;
        margin-bottom 40px
    .other-articles-container
      display flex
      flex-direction column
      .other-articles-head
        display flex
        flex-direction row
        justify-content space-between
        margin 40px 0 25px
        align-items center
        h2
          color: #315AF2;
          font-family: Museo-Cyrl;
          font-size: 36px;
          line-height: 20px;
          margin 0
      .other-articles
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-column-gap 17px
        grid-row-gap 25px
        .article
          min-height 300px
          border: 2px solid #CDCDCD;
          box-sizing: border-box;
          border-radius: 3px;
          padding 12px 22px 22px
          &:hover
            border: 2px solid #E2EDF8;
            box-sizing: border-box;
            box-shadow: 0px 2px 10px #E2EDF8;
            cursor pointer
          p.created
            font-size: 12px;
            line-height: 20px;
            color: #979797;
            margin 0
  .add-article-container
    display block
    margin 39px 128px auto 118px
    h1
      font-family: Museo-Cyrl;
      font-size: 45px;
      line-height: 52px;
      letter-spacing: -0.416667px;
      color: #315AF2;
    form
      display flex
      flex-direction row
      .left
        width 880px
        margin-right 15px
        input
          width 100%
          margin-bottom 37px
          &[type=text], &[type=textarea]
            color #315AF2;
            font-size 24px
            border-radius 3px
            border 2px solid #CDCDCD
            font-family Circle-rounded
            padding 4px 12px
            &:placeholder
              color red
          &[type=textarea]
            min-height 380px
      .right
        width 300px
        input
          margin-bottom 37px
          &[type=submit]
              color white;
              background-color #E9399C
              font-size 18px
              line-height 23px
              border-radius 3px
              border none
              font-family Circle-rounded
              padding 10px 12px
              &:hover
                cursor pointer
        .upload-image
          border: 2px solid #CDCDCD;
          box-sizing: border-box;
          border-radius: 3px;
          padding 17px 20px 24px
          width 100%
          text-align center
          .preview
            position relative
            display none
            &.active
              display block
            .close
              position absolute
              top 13px
              right 10px
              width 24px
              height 24px
              background url("/static/dist/img/svg/close-btn.svg")
              &:hover
                cursor pointer
          img#image_upload_preview
            max-width 100%
          p
            margin 0
            font-size: 24px;
            line-height: 31px;
            color: #315AF2;
          .inputfile
            width: 0.1px;
            height: 0.1px;
            opacity: 0;
            overflow: hidden;
            position: absolute;
            z-index: -1;
          .inputfile + label
              font-size: 1.25em;
              font-weight: 700;
              font-family Circle-rounded
              color: white;
              background: #315AF2;
              border-radius: 3px;
              border none
              display: inline-block;
              padding 14px 38px
              margin-top 11px
          .inputfile:focus + label, .inputfile + label:hover
              background: #315AF2;
              border-radius: 3px;
              cursor pointer
  footer
    margin 0 auto
    text-align center